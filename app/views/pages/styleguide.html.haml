      %i.icon.circle.circle-negative.circle-hollow &#58777;

  %h2 Stat Cards

  .row

    %section.card
      %header
        %h4 Title
      .card-trend.positive
        %i.icon.circle.circle-positive.circle-hollow &#58776;
        %h3
          Trend
        %small More Spending
      .card-stat
        %h5 Council spending
        %span.stat-value
          £50m
      .card-stat
        %h5 NHS spending
        %span.stat-value
          £10m

    %section.card
      %header
        %h4 Title
      .card-trend.negative
        %i.icon.circle.circle-negative.circle-hollow &#58777;
        %h3
          Trend
        %small Less spending
      .card-stat
        %h5 Council Spending
        %span.stat-value-na
          Not Provided
      .card-stat
        %h5 NHS Spending
        %span.stat-value
          £18m

  %h2 Super Tabs

  %section.chart-wrapper

    %nav.super-tab-wrapper
      .super-tab.unselected#tab-one
        %header
          %h3 18-64 Year Olds
        %article
          %p
            %strong 544,567
          .super-tab-trend.clear
            %i.icon.circle.circle-positive &#58776;
            %data
              %span.stat-value +1%
              %p Increase in 5 years
          %p
            %strong 600,000 predicted for 2020

      .super-tab.selected#tab-two
        %header
          %h3 65+ Year Olds
