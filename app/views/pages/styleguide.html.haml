  %h2 Containers

  .row
    %section.half
      I'm a section!
    %aside.half
      I'm a aside!

  %h2 Buttons

  .row
    %section
      %button Button tag

      = link_to('Anchor tag', '#', class: 'button')

  %h2 Icons

  .row
    %section.half
      %i.icon.circle.circle-positive &#58776;

      %i.icon.circle.circle-negative &#58777;

